{
  "name": "smart-log-reporter",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "cross-env DATABASE_URL=file:./dev.db next dev",
    "build": "prisma generate && next build",
    "start": "cross-env DATABASE_URL=file:./dev.db next start",
    "lint": "next lint",
    "db:push": "cross-env DATABASE_URL=file:./dev.db prisma db push",
    "db:studio": "cross-env DATABASE_URL=file:./dev.db prisma studio",
    "desktop:dev": "cross-env PORT=3000 concurrently \"npm:dev\" \"electron .\"",
    "desktop:build": "npm run build && electron-builder -w"
  },
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "lucide-react": "^0.555.0",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@types/cacheable-request": "^6.0.3",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^33.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "prisma": "^5.15.0",
    "tailwindcss": "^3.4.4",
    "typescript": "~5.8.2"
  },
  "build": {
    "appId": "com.smartlog.reporter",
    "productName": "智能日志助手",
    "files": [
      "electron/**",
      ".next/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "app/.next/standalone"
      },
      {
        "from": ".next/static",
        "to": "app/.next/static"
      }
    ],
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}